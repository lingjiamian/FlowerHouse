@model FlowerHouse.Models.Entity.Order
<form class="layui-form" asp-area="Admin" asp-controller="Order" asp-action="CreateOrUpdate" method="post">
    <input hidden asp-for="OrderId" />
    <div class="layui-form-item">
        <label class="layui-form-label">订单生成日期</label>
        <div class="layui-input-inline">
            <input type="text" asp-for="CreateTime" id="createtime" autocomplete="off" class="layui-input">
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">订单完成日期</label>
        <div class="layui-input-inline">
            <input type="text" asp-for="FinishTime" id="finishtime" autocomplete="off" class="layui-input">
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">订单总价</label>
        <div class="layui-input-inline">
            <input type="text" asp-for="TotalPrice" autocomplete="off" class="layui-input">
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">订单地址</label>
        <div class="layui-input-inline">
            <input type="text" asp-for="Address" autocomplete="off" class="layui-input">
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">用户ID</label>
        <div class="layui-input-inline">
            <input type="text" asp-for="HouseUserId" autocomplete="off" class="layui-input">
        </div>
    </div>

    <div class="layui-form-item">
        <label class="layui-form-label">订单状态</label>
        <div class="layui-input-inline">
            <select asp-for="OrderStatus">
                <option value="0">未支付</option>
                <option value="1">已支付</option>
                <option value="2">已关闭</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" type="submit">立即提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>

        </div>
    </div>
</form>

@section Script{
    <script>
        //Demo
        layui.use(['form', 'laydate'], function () {
            //var form = layui.form;
            var laydate = layui.laydate;

            laydate.render({
                elem: '#createtime',
                type: 'datetime',
                format: 'yyyy/MM/dd HH:mm:ss' 
            });

            laydate.render({
                elem: '#finishtime',
                type: 'datetime',
                format: 'yyyy/MM/dd HH:mm:ss' 

            });


        });
    </script>
}