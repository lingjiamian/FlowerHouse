@model List<FlowerHouse.Models.Entity.Order>

@section Style{
    <style>
        .order-box {
            border: 1px solid gray;
            width: 800px;
            padding: 20px 30px;
            position: relative;
            margin: 30px 0;
        }

        .order-status {
            color: gray;
        }

        .order-list-box {
            background-color: white;
            padding: 50px 100px;
        }

        .page-main {
            padding: 50px 0;
        }

        .order-price-box {
            position: absolute;
            right: 10%;
            top: 20%;
        }

        .order-price {
            font-size: 28px;
            color: black;
        }

        .order-detail {
            text-align: center;
        }


        .my-order-title {
            padding: 20px 0;
        }
    </style>
}
<div class="page-main layui-bg-gray">
    <div class="layui-container order-list-box">
        <h2 class="my-order-title">我的订单</h2>
        @foreach (var order in Model)
        {
            <div class="order-box">
                <p class="order-status">@order.OrderStatus.ToString()</p>
                <span>@order.HouseUser.UserName | 下单日期：@order.CreateTime | 订单号：@order.OrderId</span>
                <div class="order-price-box">
                    订单金额：<span class="order-price">@order.TotalPrice</span>
                    <p class="order-detail"><a href="/Order/Detail?orderid=@order.OrderId">订单详情</a></p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        layui.use(['element'], function () {
        });
    </script>
}